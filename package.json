{
  "name": "ink-yoga-learning-platform",
  "version": "1.0.0",
  "description": "An interactive learning platform to master Ink and Yoga - build terminal UIs with React, TypeScript, and Node.js",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "learn-ink": "./dist/index.js",
    "ink-learn": "./dist/index.js",
    "ink-tutorial": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.tsx",
    "watch": "tsc --watch",
    "learn": "tsx src/index.tsx",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ink",
    "yoga",
    "cli",
    "terminal",
    "tui",
    "react",
    "typescript",
    "tutorial",
    "learning",
    "interactive",
    "education",
    "flexbox",
    "layout",
    "command-line",
    "ink-tutorial",
    "terminal-ui",
    "learn-react",
    "learn-ink"
  ],
  "author": {
    "name": "Ink Learning Platform",
    "url": "https://github.com/vadimdemedes/ink"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ink-yoga-learning-platform"
  },
  "bugs": {
    "url": "https://github.com/your-username/ink-yoga-learning-platform/issues"
  },
  "homepage": "https://github.com/your-username/ink-yoga-learning-platform#readme",
  "dependencies": {
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "yoga-layout-prebuilt": "^1.10.0",
    "ink-text-input": "^6.0.0",
    "ink-select-input": "^6.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
